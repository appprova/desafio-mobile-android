<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_unavailable_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <ProgressBar
        android:layout_width="@dimen/list_item_loading_progressbar_size"
        android:layout_height="@dimen/list_item_loading_progressbar_size"
        android:indeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_loading_text_margin"
        android:layout_marginStart="@dimen/list_item_loading_text_margin"
        android:text="@string/loading" />
</LinearLayout>